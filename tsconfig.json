{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "target": "es2017",
      
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*"
          ]
      },
      "typeRoots": [
        "types",
        "node_modules/@types"
      ],
  },
  "include": [
      "src/**/*"
  ]
}